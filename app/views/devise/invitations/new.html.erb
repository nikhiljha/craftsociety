<section class="padding-xxl">
<h2><%= t "devise.invitations.new.header" %></h2>

<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <p>
    Be sure that you trust everyone that you invite! <b>You may be held responsible</b> for any and all 
    misconduct by the people you invite. If you're unsure if you can trust this person to represent you,
    you probably shouldn't invite them.
  </p>

  <% resource.class.invite_key_fields.each do |field| -%>
    <div class="field">
      <%= f.label field %>
      <%= f.text_field field %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit t("devise.invitations.new.submit_button") %>
  </div>
<% end %>
</section>